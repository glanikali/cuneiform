{% extends "base.html.j2" %}

{% block title %} Buy Item {% endblock %}

{% block content %}
<div class="d-block p-2 bg-light">
  <h1>What did you buy?</h1>
  <p>Fill out the form to remove an item from your list of needed supplies.</p>
  <form action={{url_for('items.update',id=item.id)}} method="POST">
      {# This hidden_tag is a CSRF security feature. #}
      {{ form.hidden_tag() }}
      {{ form.id.label }} {{ form.id() }}
      {{ form.submit() }}

  </form>
</div>
{% endblock %}
